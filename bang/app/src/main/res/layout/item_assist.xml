<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:padding="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_circle" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/sex_girl"
            android:drawablePadding="5dp"
            android:text="昵称"
            android:textColor="@color/textPrimary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="北京交通大学"
            android:textColor="@color/textSecondary"
            android:textSize="10sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ll_info"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/ll_info">

        <TextView
            android:id="@+id/tv_assist_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮我去快递"
            android:textColor="@color/textPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_assist_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_assist_state"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/assist_location"
            android:drawablePadding="5dp"
            android:text="定位地点：北交大南门"
            android:textColor="@color/textPrimary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_assist_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_assist_location"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/release_address"
            android:drawablePadding="5dp"
            android:text="北京交通大学第九教学楼"
            android:textColor="@color/textPrimary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_assist_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_assist_address"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/release_time"
            android:drawablePadding="5dp"
            android:text="截止时间至11-11日"
            android:textColor="@color/textPrimary"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_assist_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_assist_state"
            android:layout_alignParentRight="true"
            android:text="3元"
            android:textColor="@color/orange"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_assist_bargain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_assist_money"
            android:layout_marginTop="5dp"
            android:text="议价范围：1元内"
            android:textColor="@color/textSecondary"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_assist_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_assist_time"
            android:layout_alignParentRight="true"
            android:text="进行中"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>