        <activity android:name=".message.ui.MessageActivity" />
        <activity android:name=".message.ui.ChatActivity" />
        <activity android:name=".message.ui.EaseShowBigImageActivity" />
        <activity android:name=".message.ui.EaseBaiduMapActivity" />
        <activity android:name=".assist.ui.AssistActivity" />

        <!-- alipay sdk begin -->

        <activity
            android:name="com.alipay.sdk.app.H5PayActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize"
            android:exported="false"
            android:screenOrientation="behind"
            android:windowSoftInputMode="adjustResize|stateHidden"></activity>
        <activity
            android:name="com.alipay.sdk.app.H5AuthActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind"
            android:windowSoftInputMode="adjustResize|stateHidden"></activity>

        <!-- alipay sdk end -->
    </application>

