            android:windowSoftInputMode="stateHidden|adjustPan"></activity>
        <activity android:name=".assist.ui.AssistListActivity"></activity>
        <activity android:name=".base.FlashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.ui.LoginActivity"></activity>
        <activity android:name=".login.ui.RegisterActivity"></activity>
        <activity android:name=".login.ui.SettingActivity"></activity>
